<Application x:Class="TS3_Dream_Launcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TS3_Dream_Launcher"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- The Sims 4 font resources -->
            <FontFamily x:Key="TheSimsSans">pack://application:,,,/Resources/#The Sims Sans</FontFamily>
            <FontFamily x:Key="TheSimsSansSc">pack://application:,,,/Resources/#The Sims Sans Sc</FontFamily>

            <!-- Launcher default language to use in Editor -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Languages/LangStrings.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
